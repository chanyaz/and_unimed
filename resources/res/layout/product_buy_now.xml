<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center" android:orientation="vertical" android:id="@+id/buttons" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/quantitylinearlayout" android:layout_width="match_parent" android:layout_height="wrap_content">
        <EditText android:theme="@style/MyMaterialTheme" android:layout_gravity="fill_horizontal" android:id="@+id/quantity" android:padding="10dp" android:layout_width="0dp" android:layout_height="wrap_content" android:singleLine="true" android:layout_weight="0.3" android:inputType="number"/>
        <Button android:layout_gravity="end" android:id="@+id/updatequantity" android:padding="10dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.7"/>
    </LinearLayout>
    <Button android:id="@+id/buynow" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>
