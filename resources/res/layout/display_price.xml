        <com.puzzlersworld.android.util.CustomFontTextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/shippingValue" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_margin="10dp" android:layout_weight="0.4"/>
    </LinearLayout>
    <View android:id="@+id/separator4" android:background="@android:color/darker_gray" android:layout_width="match_parent" android:layout_height="1dp"/>
    <LinearLayout android:layout_gravity="start" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.puzzlersworld.android.util.CustomFontTextView android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/totalHeader" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_margin="10dp" android:layout_weight="0.6"/>
