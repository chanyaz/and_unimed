        <com.puzzlersworld.android.util.CustomFontTextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/discountValue" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_margin="10dp" android:layout_weight="0.4"/>
