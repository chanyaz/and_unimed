<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FullscreenActionBarStyle">
        <item name="android:background">@color/black_overlay</item>
    </style>
    <style name="FullscreenTheme">
        <item name="android:windowBackground">@null</item>
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>
    <style name="MaterialBaseTheme">
    </style>
    <style name="MaterialBaseTheme.AlertDialog">
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>
    <style name="MaterialBaseTheme.Dialog">
        <item name="colorPrimary">@color/materialize_primary</item>
        <item name="colorPrimaryDark">@color/materialize_primary_dark</item>
        <item name="colorAccent">@color/materialize_accent</item>
    </style>
    <style name="MaterialBaseTheme.Light">
    </style>
    <style name="MaterialBaseTheme.Light.AlertDialog">
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>
    <style name="MaterialBaseTheme.Light.DarkToolbar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="MaterialBaseTheme.Light.Dialog">
        <item name="colorPrimary">@color/materialize_primary</item>
        <item name="colorPrimaryDark">@color/materialize_primary_dark</item>
        <item name="colorAccent">@color/materialize_accent</item>
    </style>
    <style name="MaterialTheme.ActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>
    <style name="MaterialTheme.Light.ActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>
    <style name="MaterialTheme.Light.DarkToolbar.ActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>
    <style name="SmoothProgressBar">
        <item name="android:maxHeight">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="spb_color">@color/spb_default_color</item>
        <item name="spb_stroke_width">@dimen/spb_default_stroke_width</item>
        <item name="spb_stroke_separator_length">@dimen/spb_default_stroke_separator_length</item>
        <item name="spb_sections_count">@integer/spb_default_sections_count</item>
        <item name="spb_speed">@string/spb_default_speed</item>
        <item name="spb_interpolator">@integer/spb_default_interpolator</item>
        <item name="spb_reversed">@bool/spb_default_reversed</item>
        <item name="spb_mirror_mode">@bool/spb_default_mirror_mode</item>
    </style>
</resources>
