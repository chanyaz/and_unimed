    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/hiddenaddCommentLayout" android:background="@android:color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <com.puzzlersworld.android.util.EditTextBackEvent android:textSize="15sp" android:textColor="#000000" android:gravity="start" android:id="@+id/hiddencommentBox" android:background="@android:color/transparent" android:padding="15dp" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="Type Reply Message" android:maxLines="3" android:layout_weight="0.5" android:inputType="textMultiLine"/>
        <ImageView android:layout_gravity="center" android:id="@+id/hiddensendComment" android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/send_icon" android:scaleType="fitCenter"/>
    </LinearLayout>
</RelativeLayout>
